from math import pi
from math import sqrt

while True:
    try:
        side_1 = float(input('What is the length of the first side? '))
        if side_1 <= 0:
            print('Please enter a positive value above zero.')
        else:
            break
    except ValueError:
        print('This is not a valid entry, please enter a positive number.')

while True:
    try:
        side_2 = float(input('What is the length of the first side? '))
        if side_2 <= 0:
            print('Please enter a positive value above zero.')
        else:
            break
    except ValueError:
        print('This is not a valid entry, please enter a positive number.')

print('The area of the rectangle will be', side_1*side_2, 'cm')

while True:
    try:
        radius = float(input('What is the radius of the circle? '))
        if side_1 <= 0:
            print('Please enter a positive value above zero.')
        else:
            break
    except ValueError:
        print('This is not a valid entry, please enter a positive number.')

print('the area of the circle would be', pi*sqrt(radius), 'cm squared')